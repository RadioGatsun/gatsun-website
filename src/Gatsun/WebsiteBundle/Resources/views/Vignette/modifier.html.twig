{% extends "::base.html.twig" %}
{% block title %}Modifier une vignette &ndash; {{ parent() }}{% endblock %}
{% block body %}
	<section class="panel panel-default">
		<div class="panel-heading">
			<h1>Modifier une vignette</h1>
		</div>
		<form class="panel-body" method="post" {{ form_enctype(form) }}>
			<p>
				{{ form_errors(form.titre) }}
				<div class="input-group">
					<label for="form_titre" class="input-group-addon">
						<i class="fa fa-tag fa-fw"></i>
					</label>
					{{ form_widget(form.titre, { 'attr': {'placeholder': 'Titre', 'class' : 'form-control'} } ) }}
				</div>
			</p>
			<p>
				{{ form_errors(form.description) }}
				<div class="input-group">
					<label for="form_description" class="input-group-addon">
						<i class="fa fa-pencil fa-fw"></i>
					</label>
					{{ form_widget(form.description, { 'attr': {'placeholder': 'Description', 'class' : 'form-control'} } ) }}
				</div>
			</p>
			<p>
				{{ form_errors(form.lien) }}
				<div class="input-group">
					<label for="form_lien" class="input-group-addon">
						<i class="fa fa-link fa-fw"></i>
					</label>
					{{ form_widget(form.lien, { 'attr': {'placeholder': 'Lien', 'class' : 'form-control'} } ) }}
				</div>
			</p>
			<p>
				Image actuelle :
				<img class="form-img" src="{{ asset('images/vignettes/' ~ vignette.image)}}" />
				<br />

				{{ form_errors(form.fichier) }}
				<div class="input-group">
					<label for="form_fichier" class="input-group-addon">
						<i class="fa fa-picture-o fa-fw"></i>
					</label>
					{{ form_widget(form.fichier, { 'attr': {'placeholder': 'Image', 'class' : 'form-control'} }) }}
				</div>
			</p>
			<div class="alert alert-info"><strong>Note : </strong> L'image doit avoir une taille de 1280&times;475 pixels.</div>
			
			{{ form_widget(form._token) }}
			<p>
				<input type="submit" class="btn btn-default btn-primary" value="Modifier" />
			</p>
		</form>
		
	</section>
	
{% endblock %}

{% block stylesheets %}
