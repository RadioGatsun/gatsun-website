{% extends "::base.html.twig" %}
{% block title %}Modifier une émission &ndash; {{ parent() }}{% endblock %}
{% block body %}
	<section class="panel panel-default">
		<div class="panel-heading">
			<h1>Modifier une émission</h1>
		</div>
		<form class="panel-body" method="post" {{ form_enctype(form) }}>
			<p>
				{{ form_errors(form.nom) }}
				<div class="input-group">
					<label for="form_nom" class="input-group-addon">
						<i class="fa fa-tag fa-fw"></i>
					</label>
					{{ form_widget(form.nom, { 'attr': {'placeholder': 'Nom', 'class' : 'form-control'} } ) }}
				</div>
			</p>
			<p>
				{{ form_errors(form.description) }}
				<div class="input-group">
					<label for="form_description" class="input-group-addon">
						<i class="fa fa-pencil fa-fw"></i>
					</label>
					{{ form_widget(form.description, { 'attr': {'placeholder': 'Description', 'class' : 'form-control'} } ) }}
				</div>
			</p>
			<p>
				{{ form_errors(form.vignette) }}
				<div class="input-group">
					<label for="form_vignette" class="input-group-addon">
						<i class="fa fa-picture-o fa-fw"></i>
					</label>
					{{ form_widget(form.vignette, { 'attr': {'placeholder': 'Vignette', 'class' : 'form-control'} } ) }}
				</div>
			</p>
			<p>
				{{ form_errors(form.bandeau) }}
				<div class="input-group">
					<label for="form_bandeau" class="input-group-addon">
						<i class="fa fa-picture-o fa-fw"></i>
					</label>
					{{ form_widget(form.bandeau, { 'attr': {'placeholder': 'Bandeau', 'class' : 'form-control'} } ) }}
				</div>
			</p>
			<p>
				{{ form_errors(form.presentateurs) }}
				<div class="input-group">
					<label for="form_presentateurs" class="input-group-addon">
						<i class="fa fa-user fa-fw"></i>
					</label>
					{{ form_widget(form.presentateurs, { 'attr': {'placeholder': 'Présentateurs', 'class' : 'form-control'} } ) }}
				</div>
			</p>
			
			{{ form_widget(form._token) }}
			<p>
				<input type="submit" class="btn btn-default btn-primary" value="Modifier" />
			</p>
		</form>
		
	</section>
	
{% endblock %}

