{# Note : Remplacer les liens en "localhost" sur la version finale #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>{% block title %}Radio Gatsun{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="http://localhost/Gatsun-v2/web/images/favicon.jpg" />
        <style type="text/css">
            @font-face { 
                font-family: 'Script MT Bold'; 
                 src: url('http://localhost/Gatsun-v2/web/font/script_mt_bold/script_mt_bold.eot'); 
                 src: url('http://localhost/Gatsun-v2/web/font/script_mt_bold/script_mt_bold.eot?#iefix') format('embedded-opentype'), 
                      url('http://localhost/Gatsun-v2/web/font/script_mt_bold/script_mt_bold.svg#Script MT Bold') format('svg'), 
                      url('http://localhost/Gatsun-v2/web/font/script_mt_bold/script_mt_bold.woff') format('woff'), 
                      url('http://localhost/Gatsun-v2/web/font/script_mt_bold/script_mt_bold.ttf') format('truetype'); 
                 font-weight: normal; 
                 font-style: normal;
            }
            body 
            {
                margin: auto;
                font-family: Arial, Verdana, Helvetica, Tahoma, serif;      
                background: silver;
                font-size: 0.8em;
            }

            a
            {
                color: gray;
            }

            a:hover
            {
                color: #EB9723;
            }

            #page
            {
                margin: 0px;
                margin: auto;
                width: 500px;
                background: rgba(192,192,192,0.6);
                padding: 10px;
            }

            #header
            {
                margin: auto;
                font-family: 'Script MT Bold', serif;
                font-size: 6.5em;
                height: 125px;
                width: 500px;
                text-align: center;
                text-shadow: 0px 0px 25px #FFFFFF;
            }

            #section
            {
                padding: 5px;
                margin: 5px 5px 15px 5px;
                background: #EEEEEE;
                box-shadow: 8px 8px 8px #000;
            }

            #header img
            {
                vertical-align: middle;
            }

            h1, h2, h3, h4, h5, h6, h1 a, h2 a, h3 a, h4 a, h5 a, h6 a
            {
                font-family: 'Script MT Bold', serif;
                color: #EB9723;
                margin-top: 0px;
                margin-bottom: 0px;
                text-decoration: none;
            }

            h1 a:hover, h2 a:hover, h3 a:hover, h4 a:hover, h5 a:hover, h6 a:hover
            {
                color: gray;
            }

            h1
            {
                font-size: 2.5em;
            }

            h2
            {
                font-size: 1.9em;
            }

            h3
            {
                font-size: 1.5em;
            }

            h4
            {
                font-size: 1.4em;
            }

            h5
            {
                font-size: 0.1em;
            }

            h6
            {
                font-size: 0.9em;
            }

            #footer
            {
                margin: auto;
                width: 500px;
                padding: 5px;
                font-family: 'Script MT Bold', serif;
                text-align: center;
                background: black;
                color: white;
                border-top: 5px solid #EB9723;
                font-size: 1.6em;
            }

            .facebook-logo
            {
                display: inline-block;
                background: url("http://localhost/Gatsun-v2/web/images/facebook-logo.png");
                height: 24px;
                width: 24px;
                text-decoration: none;
            }

            .twitter-logo
            {
                display: inline-block;
                background: url("http://localhost/Gatsun-v2/web/images/twitter-logo.png");
                height: 24px;
                width: 24px;
                text-decoration: none;
            }

            .facebook-logo:hover, .twitter-logo:hover
            {
                background-position: 0px 24px;
            }
        </style>
    </head>
    <body>
        <div id="header">
            <img src="{{ asset('images/header.png') }}" /> Gatsun
        </div>        
        <div id="page">
            {% block body %}{% endblock %}           
        </div>
        <div id="footer">
            © 2009-2014 &ndash; Radio Gatsun &ndash; Tous droits réservés
            <a class="facebook-logo" href="http://www.facebook.com/RadioGatsun">&nbsp;</a>
            <a class="twitter-logo" href="http://www.twitter.com/RadioGatsun">&nbsp;</a><br />
        </div>
    </body>
</html>